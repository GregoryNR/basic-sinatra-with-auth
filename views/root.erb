<!-- changed the logic here to be conditional based on the session cookie getting set -->
<% if !session[:user] %>

  <div id="no_user">

    <% if flash[:register_notice] %>
      <p><%= flash[:register_notice] %></p>
    <% end %>

    <!-- added flash from post '/' -->
    <% if flash[:not_found] %>
      <p><%= flash[:not_found] %></p>
    <% end %>

    <a href="/register/">
      <div id="register_button">Register</div>
    </a>

    <div class="wrapper">
    <form action="/" method="post">
      <label for="username">username</label>
      <input type="text" name="username" id="username"/>
      <br/>
      <label for="password">password</label>
      <input type="text" name="password" id="password"/>
      <br/>
      <button type="submit">Login</button>
    </form>
    </div><!-- wrapper ends -->
  </div><!-- no user ends -->

<% end %>


<div class="logged_in_page">

  <% if session[:user] %>

    <h1>Welcome, <%= @user[:username] %></h1>
    <a href="/logout/">
      <div id="logout_button">Logout</div>
    </a>

  <% end %>

</div>





